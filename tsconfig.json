{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "strict": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "scripts/*"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "global.d.ts",
    "assets.d.ts",
    "i18next.d.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "index.js",
    "scripts/generate-resources.js"
  ]
}
